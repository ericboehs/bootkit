<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="uk-alert uk-alert-danger">
      <ul class="uk-list">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <ul>
    </div>
  <% end %>

  <div class="uk-margin">
    <%= f.label :name, class: 'uk-form-label' %>
    <%= f.text_field :name, class: 'uk-input uk-form-controls' %>
  </div>

  <div class="uk-margin">
    <%= f.label :email, class: 'uk-form-label' %>
    <%= f.text_field :email, class: 'uk-input uk-form-controls' %>
  </div>

  <div class="uk-margin">
    <a class="password-toggle" uk-toggle="target: #change-password">
      <%= t '.change_password' %>
    </a>
  </div>

  <div class="uk-margin">
    <div id="change-password" hidden="hidden">
      <div class="uk-margin">
        <%= f.label :current_password, class: 'uk-form-label' %>
        <%= f.password_field :current_password, class: 'uk-input uk-form-controls' %>

        <div class="uk-margin">
          <%= f.label :new_password, class: 'uk-form-label' %>
          <%= f.password_field :password, class: 'uk-input uk-form-controls' %>
        </div>
      </div>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.button t('global.update'), class: 'uk-button uk-button-primary' %>
  </div>
<% end %>
