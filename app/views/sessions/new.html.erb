<div class="uk-width-large uk-margin-top uk-align-center">
  <h1><%= t '.log_in' %></h1>

  <%= form_tag login_path do %>
    <div class="uk-margin">
      <%= email_field_tag :email, @user.email, placeholder: t('.email'), autofocus: true, autocorrect: 'off',
        autocapitalize: 'off', spellcheck: false, class: 'uk-input uk-form-large' %>
    </div>

    <div class="uk-margin">
      <%= password_field_tag :password, nil, placeholder: t('.password'), class: 'uk-input uk-form-large' %>
    </div>

    <div class="uk-margin">
      <%= button_tag t('.log_in'), class: 'uk-button uk-button-large uk-button-primary' %>
    </div>
  <% end %>
  <%= link_to t('.forgot_password'), new_password_reset_path %>
</div>
